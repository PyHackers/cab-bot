<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip" >

    <ImageView
        android:id="@+id/favorite_image"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/favorite_image"
        android:singleLine="true"
        android:text="Titlsdfdsfsdfsssssssssssssssse"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/favorite_image"
        android:maxLines="3"
        android:text="Titlsdfdsafsasfsdfsafsfsfsafasfsdfsfsaffsfasdfasfddddddddddddddddddddddddddddddddddfsdfsssssssssssssssse"
        android:textSize="14sp" />

</RelativeLayout>