<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip" >

    <ImageView
        android:id="@+id/booking_image"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/booking_image"
        android:maxWidth="200dip"
        android:singleLine="true"
        android:text="Titlsdfdsfsdfsssssssssssssssse"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/event_type_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/title_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/pick_up_place_image"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignLeft="@id/title_text"
        android:layout_below="@id/title_text"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/booking_image"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/pick_up_place_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/pick_up_place_image"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/pick_up_place_image"
        android:singleLine="true"
        android:text="Sample Place" />

    <ImageView
        android:id="@+id/pick_up_time_image"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignLeft="@id/title_text"
        android:layout_below="@id/pick_up_place_image"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/booking_image"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/pick_up_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/pick_up_time_image"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/pick_up_place_image"
        android:singleLine="true"
        android:text="Sample Place" />

</RelativeLayout>